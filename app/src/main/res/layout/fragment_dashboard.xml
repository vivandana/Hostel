<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- Scrollable Card Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                android:id="@+id/cardProfile"
                android:padding="16dp"
                android:background="@android:color/holo_red_light"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="75dp"
                        android:src="@drawable/baseline_home_24" />

                    <TextView
                        android:text="Apna Hostel"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:layout_height="20dp"
                        android:layout_width="100dp"/>

                    <TextView
                        android:text="GGP Amethi Hostel"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_height="20dp"
                        android:layout_width="100dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cards Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCourses"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    android:background="@android:color/holo_orange_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_agenda" />

                        <TextView
                            android:text=" Student Registration"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_height="30dp"
                            android:layout_width="80dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHostel"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    android:background="@android:color/holo_red_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_home_24" />

                        <TextView
                            android:text="Available Rooms"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_height="30dp"
                            android:layout_width="80dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- You can add more rows like this -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMess"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    android:background="@android:color/holo_orange_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_agenda" />

                        <TextView
                            android:text="Mess Menu"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_height="30dp"
                            android:layout_width="80dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRules"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="8dp"
                    android:background="@android:color/holo_red_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_home_24" />

                        <TextView
                            android:text="Rules Of Hostel"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_height="30dp"
                            android:layout_width="80dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>




    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>